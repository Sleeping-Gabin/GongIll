<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/predictDialog_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:errorEnabled="true"
        android:hint="@string/textField_team"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <AutoCompleteTextView
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:id="@+id/predictDialog_team_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:singleLine="true"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/predictDialog_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/predictDialog_team"
        app:layout_constraintLeft_toLeftOf="parent"
        app:errorEnabled="true"
        android:hint="@string/textField_rank"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <AutoCompleteTextView
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:id="@+id/predictDialog_rank_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            android:singleLine="true"/>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>