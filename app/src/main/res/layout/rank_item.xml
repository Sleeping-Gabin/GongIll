<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/rank_ranking"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rank_teamInfo"
        android:layout_marginRight="5dp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="?attr/colorPrimary"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rank_teamInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/rounded_corner2"
        android:backgroundTint="?attr/colorSecondaryContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_ranking"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/rank_teamName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/rank_win"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="팀 이름"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/rank_win"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.15"
            android:layout_marginStart="3dp"
            app:layout_constraintLeft_toRightOf="@id/rank_teamName"
            app:layout_constraintRight_toLeftOf="@id/rank_rndPt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="0"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:gravity="center"/>
        <TextView
            android:id="@+id/rank_rndPt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.15"
            android:layout_marginStart="3dp"
            app:layout_constraintLeft_toRightOf="@id/rank_win"
            app:layout_constraintRight_toLeftOf="@id/rank_point"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="-10"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:gravity="center"/>
        <TextView
            android:id="@+id/rank_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="3dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintLeft_toRightOf="@id/rank_rndPt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="2"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>