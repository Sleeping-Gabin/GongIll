<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        style="@style/Widget.Material3.AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolBar"
            style="@style/Widget.App.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="title"
            app:menu="@menu/edit_menu"
            android:padding="7dp"
            app:titleMarginStart="20dp">
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:id="@+id/groupDetail_info"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/groupDetail_teams_title"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp">
                <TextView
                    android:text="총 경기 수"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corner2"
                    android:backgroundTint="?attr/colorTertiaryContainer"/>
                <TextView
                    android:id="@+id/groupDetail_allPlay"
                    android:text="0"
                    android:textSize="18sp"
                    android:gravity="left"
                    android:layout_columnWeight="7"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="25dp"/>
                <TextView
                    android:text="진행한 경기 수"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corner2"
                    android:backgroundTint="?attr/colorTertiaryContainer"/>
                <TextView
                    android:id="@+id/groupDetail_finishPlay"
                    android:text="0"
                    android:textSize="18sp"
                    android:gravity="left"
                    android:layout_columnWeight="7"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="25dp"/>
                <TextView
                    android:text="소속 팀 수"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corner2"
                    android:backgroundTint="?attr/colorTertiaryContainer"/>
                <TextView
                    android:id="@+id/groupDetail_teamNum"
                    android:text="0"
                    android:textSize="18sp"
                    android:gravity="left"
                    android:layout_columnWeight="7"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="25dp"/>
            </GridLayout>

            <TextView
                android:id="@+id/groupDetail_teams_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorSecondaryContainer"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:text="@string/includeTeams"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/groupDetail_teamsView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/groupDetail_info" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/groupDetail_addTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/groupDetail_teams_title"
                app:layout_constraintTop_toTopOf="@id/groupDetail_teams_title"
                app:layout_constraintBottom_toBottomOf="@id/groupDetail_teams_title"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/add"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/groupDetail_teamsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/groupDetail_teams_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>