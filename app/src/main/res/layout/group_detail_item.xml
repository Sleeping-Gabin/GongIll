<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp">
    <TextView
        android:id="@+id/groupDetailItem_teamName"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/groupDetailItem_playInfo"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_corner2"
        android:backgroundTint="?attr/colorTertiaryContainer"
        android:text="team"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/groupDetailItem_playInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/groupDetailItem_teamName"
        android:text="@string/groupPlayInfo"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>
