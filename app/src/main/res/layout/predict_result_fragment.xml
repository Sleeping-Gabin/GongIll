<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/predictResult_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/predictResult_btns"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:textAlignment="center"
        android:text="@string/predict_check"
        android:textSize="18sp"/>
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/predictResult_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="15dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/predictResult_win">
        <Button
            android:id="@+id/predictResult_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.App.OutlinedButton"
            android:text="확정 승리" />
        <Button
            android:id="@+id/predictResult_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.App.OutlinedButton"
            android:text="라운드 비교 필요"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/predictResult_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/predictResult_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
