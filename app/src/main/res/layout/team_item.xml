<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="15dp">
    <TextView
        android:id="@+id/teamItem_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="@string/vs"
        android:textSize="16sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/teamItem_playNum"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/teamItem_vs"
        app:layout_constraintBottom_toBottomOf="@id/teamItem_vs"
        android:layout_marginRight="-3dp"
        android:text="1"/>
    <TextView
        android:id="@+id/teamItem_teamName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/teamItem_vs"
        app:layout_constraintRight_toLeftOf="@id/teamItem_playInfo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/teamItem_vs"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:paddingHorizontal="10dp"
        android:text="TEAM"
        android:textSize="16sp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="?attr/colorTertiaryContainer"/>
    <GridLayout
        android:id="@+id/teamItem_playInfo"
        android:columnCount="4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintLeft_toRightOf="@id/teamItem_teamName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/teamItem_vs"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/teamItem_rnd1"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0 : 0"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/teamItem_rnd2"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0 : 0"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/teamItem_rnd3"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0 : 0"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/teamItem_extra"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="  -  "
            android:textSize="16sp"
            android:gravity="center"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>