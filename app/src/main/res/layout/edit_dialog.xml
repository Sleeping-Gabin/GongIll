<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingVertical="20dp">
    <TextView
        android:id="@+id/team1_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="team1"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/team2_dialog"/>
    <TextView
        android:id="@+id/team2_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="team2"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/team1_dialog"/>
    <NumberPicker
        android:id="@+id/team1_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/team1_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/team2_picker"/>
    <NumberPicker
        android:id="@+id/team2_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/team2_dialog"
        app:layout_constraintLeft_toRightOf="@id/team1_picker"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/time_win"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/team1_picker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/team1_time_win"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="team1" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/team2_time_win"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="team2"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

</androidx.constraintlayout.widget.ConstraintLayout>